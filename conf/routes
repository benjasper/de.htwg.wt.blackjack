# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET        /                         controllers.HomeController.menu()
GET        /index                    controllers.HomeController.index()
GET        /rules                    controllers.HomeController.rules()
GET        /game/playingfield        controllers.HomeController.playingfield()
GET        /game/new                 controllers.HomeController.newGame()
GET        /game/hit                 controllers.HomeController.gameHit()
GET        /game/stand               controllers.HomeController.gameStand()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
